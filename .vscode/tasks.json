{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Export",
        "type": "shell",
        "command": "chmod +x ./.vscode/tasks/export.sh ; ./.vscode/tasks/export.sh",
        "group": "build",
      },
      {
        "label": "Launch Factorio DEV mode",
        "type": "shell",
        "command": "chmod +x ./.vscode/tasks/factorio.sh ; ./.vscode/tasks/factorio.sh",
        "group": "build",
      },
      {
        "label": "Copy",
        "type": "shell",
        "command": "chmod +x ./.vscode/tasks/copy.sh ; ./.vscode/tasks/copy.sh",
        "group": "build",
      },
      {
        "label": "Clear all",
        "type": "shell",
        "command": "chmod +x ./.vscode/tasks/clear.sh ; ./.vscode/tasks/clear.sh",
        "group": "build",
      },
      {
        "label": "Log in Git RedRafe",
        "type": "shell",
        "command": "chmod +x ./.vscode/tasks/switch_git.sh ; ./.vscode/tasks/switch_git.sh",
        "group": "build",
      },
    ]
  }